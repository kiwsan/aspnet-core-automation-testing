@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">

    <div class="col-md-8">
        <form method="post">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Add a ToDo</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="ItemToDo.Name"></label>
                        <input asp-for="ItemToDo.Name" class="form-control" style="width:70%;margin-bottom:5px">
                        <span asp-validation-for="ItemToDo.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" asp-page-handler="Add" class="btn btn-sm btn-outline-primary">Add</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-8">

        <form method="post">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title" style="line-height:2.1">ToDos</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        @foreach (var item in Model.ItemToDos)
                        {
                            <li style="line-height:2.4">
                                <button type="submit" class="btn btn-sm btn-outline-danger" style="margin-bottom:2px" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</button>
                                @item.Name
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </form>

    </div>

</div>